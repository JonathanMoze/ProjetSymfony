{% extends 'base.html.twig' %}


{% block nav_series %} active {% endblock %}



{% block body %}

<h1> Série : {{serie.title}} </h1>
<hr>
<br>
<h2>Saison : {{saisons.number}}</h2>
<br>

<h3>Les Episodes :</h3>
<br>
<ul>
    {% for episode in episodes %}
        <li>
            <a href="https://www.imdb.com/title/{{ episode.imdb }}/" target="blank_"> <strong>Episode n° {{episode.number}}  : </strong>{{episode.title}} </a>
         </li>
         <br>
    {% else %}
        <span>No episodes found</span>
    {% endfor %}
</ul>


{% endblock %}