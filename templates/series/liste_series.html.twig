{% extends 'base.html.twig' %}

{% block nav_series %} active {% endblock %}

{% block body %}
<h1>Les séries</h1>
<hr>

<h4>Rechercher une série</h4>
{% form_theme formRecherche 'bootstrap_4_horizontal_layout.html.twig' %}
{{ form (formRecherche) }}


<hr>
<h4><a class="btn btn-primary" role="button"href="{{path('genre')}}">Afficher les series par genre</a></h4>
<h4><a class="btn btn-primary" role="button"href="{{path('pays')}}">Afficher les series par pays</a></h4>

<div> {{knp_pagination_render(series) }}</div>

<ul>
    {% for serie in series %}

        {% set moyenne = 0 %}
        {% set nbRatings = 0 %}
        {% for rating in ratings %}
            {% if rating.series == serie %}
                {% set moyenne = moyenne + rating.value %}
                {% set nbRatings = nbRatings + 1 %}
            {% endif %}
        {% endfor %}
        {% if nbRatings != 0 %}
            {% set moyenne = moyenne / nbRatings %}
        {% endif %}
        

        <li>
            <h3 style="display: inline-block"><a href="{{ path('info_serie', {'id': serie.id}) }}">{{ serie.title }} </a> </h3>(note : {{moyenne}}/5)
            <br>
            <img src="{{ path('poster_get', {'id': serie.id}) }}">
            {% if app.user %}
            <br>
                {% if serie in app.user.series %}
                     <a class="btn btn-danger" href="{{ path('remove_serie', {'id': serie.id}) }}" role="button">Ne plus suivre cette Série</a>
                {% else %}
                    <a class="btn btn-success" href="{{ path('suivre_serie', {'id': serie.id}) }}" role="button">Suivre cette série</a>
                {% endif %}
            {% endif %}
        </li>
        <br>
    {% else %}
        <span>No records found</span>
    {% endfor %}
    <div> {{knp_pagination_render(series) }}</div>
   

</ul>



{% endblock %}