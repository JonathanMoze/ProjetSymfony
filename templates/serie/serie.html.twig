{% extends 'base.html.twig' %}


{% block nav_series %} active {% endblock %}


{% block body %}

{% set yt = serie.youtubeTrailer|split('=') %}

<h1> Série : <a href="https://www.imdb.com/title/{{ serie.imdb }}/" target="blank_"> {{serie.title}} </a></h1>
<hr>
{% if app.user %}
    {% if serie in app.user.series %}
            <br>
            <a class="btn btn-danger" href="{{ path('remove_serie', {'id': serie.id}) }}" role="button">Ne plus suivre </a>
    {% else %}
            <br>
            <a class="btn btn-success" href="{{ path('suivre_serie', {'id': serie.id}) }}" role="button">Suivre cette série</a>
    {% endif %}
{% endif %}
<br>
<br>
<h3>Trailer :</h3>
<br>
<iframe width="500" height="300" src="https://www.youtube.com/embed/{{ yt[1] }}" 
frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; 
gyroscope; picture-in-picture" allowfullscreen></iframe>
<br>
<br>
<h3>Les Saisons de  {{serie.title}} :</h3>

<ul>
    {% for saison in saisons %}
        <li>
            {% if app.user %}
                {% set vuEpisode = false %}
                {% for episode in app.user.episode %}
                    {% if episode.season == saison %}
                        {% set vuEpisode = true %}
                    {% endif %}
                {% endfor %}


                <a href="{{ path('episode_saison',{'id': saison.id}) }}"><h5>Saison {{saison.number}}</h5></a>
                {% if vuEpisode %}
                <p>vous avez vu les episodes :</p>
                <ul>
                    {% for episode in app.user.episode %}
                        {% if episode.season == saison %}
                            <li>Episode {{episode.number}}</li>
                        {% endif %}
                    {% endfor %}
                </ul>
                <br>
                {% endif %}
            {% else %}
                <a href="{{ path('episode_saison',{'id': saison.id}) }}"><h5>Saison {{saison.number}}</h5></a>
            {% endif %}    
        </li>

    {% else %}
        <span>No seasons found</span>
    {% endfor %}
</ul>

<h3>Commentaires :</h3>
<hr>







{% endblock %}